<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generated QR Code</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom styles for centering and responsive canvas */
        body {
            font-family: 'Inter', sans-serif;
        }
        #qrcode-canvas {
            display: block;
            margin: 0 auto;
            border-radius: 0.5rem; /* Match Tailwind's rounded-xl */
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
    </style>
    <!-- Load qrious library for QR code generation -->
    <script src="https://cdn.jsdelivr.net/npm/qrious@4.1.2/dist/qrious.min.js"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">

    <div class="w-full max-w-sm bg-white rounded-xl shadow-2xl p-6 text-center">
        
        <h1 class="text-2xl font-bold text-gray-800 mb-2">QR Code Generated</h1>
        <p class="text-sm text-gray-500 mb-6">Encoded Text:</p>
        
        <!-- Text box displaying the encoded data -->
        <div class="bg-indigo-50 border border-indigo-200 text-indigo-700 p-3 mb-6 rounded-lg font-mono break-all text-xs sm:text-sm">
            hi yacine
        </div>

        <!-- Canvas element where the QR code will be drawn -->
        <canvas id="qrcode-canvas" class="w-full max-w-xs aspect-square"></canvas>

        <p class="text-xs text-gray-400 mt-6">Scan the code above to view the message.</p>
    </div>

    <script>
        // Global variables provided by the Canvas environment (used in Firestore applications, but safe to include)
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';

        /**
         * Initializes and renders the QR code on the canvas element.
         */
        window.onload = function() {
            const canvas = document.getElementById('qrcode-canvas');
            
            if (!canvas) {
                console.error("Canvas element not found.");
                return;
            }

            // Determine the size for the QR code (responsive square)
            const size = Math.min(canvas.clientWidth, canvas.clientHeight);

            // Set the canvas size explicitly for the QR code generation
            canvas.width = size;
            canvas.height = size;
            
            try {
                // Initialize QRious instance
                new QRious({
                    element: canvas,
                    value: 'hi yacine', // The text from the user prompt
                    size: size,
                    padding: 10,
                    level: 'H', // High error correction
                    foreground: '#1f2937' // Dark gray color
                });
            } catch (error) {
                console.error("Error generating QR code:", error);
            }
        };
    </script>
</body>
</html>
